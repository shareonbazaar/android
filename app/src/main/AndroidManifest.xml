<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.shareonbazaar.dev.bazaar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.UsersActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:parentActivityName=".ui.OnBoardingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.OnBoardingActivity" />
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:parentActivityName=".ui.OnBoardingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.OnBoardingActivity" />
        </activity>
        <activity
            android:name=".ui.RestorePasswordActivity"
            android:parentActivityName=".ui.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.IndividualProfile"
            android:parentActivityName=".ui.UsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.UsersActivity" />
        </activity>
        <activity android:name=".ui.OnBoardingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PersonalProfileActivity" />
        <activity android:name=".ui.SearchActivity"></activity>
    </application>

</manifest>