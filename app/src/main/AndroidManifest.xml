<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.shareonbazaar.dev.bazaar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.UsersActivity"/>
        <activity android:name=".activity.LoginActivity"
            android:parentActivityName=".activity.OnboardingActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.OnboardingActivity"/>
        </activity>
        <activity android:name=".activity.RegisterActivity"
            android:parentActivityName=".activity.OnboardingActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.OnboardingActivity"/>
        </activity>
        <activity android:name=".activity.RestorePasswordActivity"
            android:parentActivityName=".activity.LoginActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity"/>
        </activity>
        <activity android:name=".activity.IndividualProfile"
            android:parentActivityName=".activity.UsersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.UsersActivity" />

        </activity>
        <activity android:name=".activity.OnboardingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>